#-------- Hotkey {{{
#------------------------------------------------------

# vim like navigation
bind-key j down
bind-key k up
bind-key m toggle-show-read-feeds
bind-key ^D pagedown
#unbind-key ^B
#bind-key ^B pageup
bind-key ^F pagedown
bind-key ^U pageup
bind-key ^M bookmark
bind-key / open-search tagselection


bind-key i sort
bind-key I rev-sort

bind-key g home all
bind-key G end all

unbind-key l
bind-key l open
bind-key h quit
bind-key ESC hard-quit

